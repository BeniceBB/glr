<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">

        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            <style>
                .header-bg{
                    height: 30vh;
                    background-color: #AAAAAA;
                }
                .description{
                    height: 100px;
                    overflow: hidden;
                }

                .intro-block, .trip-detail-block, .book-block{
                    margin-top: -3.5rem;
                    background-color: white;
                    box-shadow: 0 0 30px 0 #aaa;
                    border-radius: 5px;
                }

                .trip-detail-block, .book-block{
                min-height: calc(70vh - 130px);
                }

                .home-image{
                    height: 30vh;
                    background-color: #B0413E;
                }

                .home-image-1{
                    height: 30vh;
                    background-color: #5eb5e0;
                }

                .footer{
                    height: 100px;
                    background-color: #5eb5e0;
                }

                .login-bg{
                    height: 100vh;
                    background-color: #5eb5e0;
                }

                .align-center{
                    text-align: center;
                }

                .isFullyBooked{
                    color: lightgrey;
                }

                .right{
                    float: right;
                }

                h2 a{
                    text-decoration: none;
                    font-weight: 800;
                    text-transform: uppercase;
                }

                h2 a:hover{
                    text-decoration: underline dotted black;
                }


            </style>
        {% endblock %}
    </head>
    <body>
    <div class="container-fluid p-0">

    <div class="topheader m-0">
        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            <a href="{{ path('app_logout') }}" class="btn">Loguit</a>
        {% else %}
        <a href="{{ path('app_login') }}" class="btn">Login</a>
        {% endif %}
    </div>
        <div class="header-bg"></div>
        <div class="row m-0">
        {% block body %}

        {% endblock %}
        </div>
        <div class="row mx-0 mt-5">
            <div class="col-12 footer"></div>
        </div>
    </div>

    </body>
</html>
