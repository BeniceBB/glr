<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">

        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            <style>
                .header-bg{
                    height: 40vh;
                    background-image: url("https://ex79458.ict-lab.nl/img/beach-2836300.jpg");
                    background-position-y: center;
                    background-size: cover;
                }
                .description{
                    height: 100px;
                    overflow: hidden;
                }

                .topheader{
                    background-color: white;
                    opacity: .5;
                    width: 100vw;
                    text-align: right;
                }

                .intro-block, .trip-detail-block, .book-block{
                    margin-top: -5rem;
                    background-color: white;
                    box-shadow: 0 0 20px 0 lightgrey;
                    border-radius: 1px;
                }

                .trip-detail-block, .book-block{
                min-height: calc(70vh - 130px);
                }

                .home-image{
                    height: 50vh;
                    background-image: url("https://ex79458.ict-lab.nl/img/beach-g4c2135d5a_1920.jpg");
                    background-size: cover;
                }

                .home-image-1{
                    height: 50vh;
                    background-image: url("https://ex79458.ict-lab.nl/img/elephant-gd23186a63_1920.jpg");
                    background-size: cover;
                }

                .footer{
                    height: 100px;
                    background-color: #5eb5e0;
                }

                .login-bg{
                    height: 100vh;
                    background-color: #5eb5e0;
                }

                .align-center{
                    text-align: center;
                }

                .isFullyBooked{
                    color: lightgrey;
                }

                .right{
                    float: right;
                }

                h2 a{
                    text-decoration: none;
                    font-weight: 800;
                    text-transform: uppercase;
                }

                h2 a:hover{
                    text-decoration: underline dotted black;
                }

                h1{
                    font-weight: 300;
                    text-transform: uppercase;
                    letter-spacing: 2px;
                }


            </style>
        {% endblock %}
    </head>
    <body>
    <div class="container-fluid p-0">

    <div class="topheader m-0 right">
        <a href="{{ path('app_default') }}" class="btn">HOME</a>
        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            {% if app.user.studentNumber == 'admin'%}
                <a href="{{ path('app_trip_index') }}" class="btn">REIZEN</a>
                <a href="{{ path('app_trip_new') }}" class="btn">NIEUWE REIS</a>
                <a href="{{ path('app_attendee_index') }}" class="btn">INSCHRIJVINGEN</a>
            {% else %}
                <a href="{{ path('app_trip_overview') }}" class="btn">REIZEN</a>
            {% endif %}
            <a href="{{ path('app_logout') }}" class="btn">LOGUIT</a>
        {% else %}
        <a href="{{ path('app_login') }}" class="btn">LOGIN</a>
        {% endif %}
    </div>
        <div class="header-bg"></div>
        <div class="row m-0">
        {% block body %}

        {% endblock %}
        </div>
        <div class="row mx-0 mt-5">
            <div class="col-12 footer"></div>
        </div>
    </div>

    </body>
</html>
