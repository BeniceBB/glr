{% extends 'base.html.twig' %}

{% block title %}Trip{% endblock %}

{% block body %}
<div class="container-fluid p-0">
    <div class="header-bg"></div>
    <div class="row">
        <div class="col-10 mx-auto">
    <h1>{{ trip.title }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Bestemming</th>
                <td>{{ trip.destination }}</td>
            </tr>
            <tr>
                <th>Omschrijving</th>
                <td>{{ trip.description }}</td>
            </tr>
            <tr>
                <th>Begindatum</th>
                <td>{{ trip.startdate ? trip.startdate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Einddatum</th>
                <td>{{ trip.enddate ? trip.enddate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>MaxStudents</th>
                <td>{{ trip.maxStudents }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_trip_overview') }}">Terug naar het overzicht</a>
    <a href="{{ path('app_attendee_new', {'tripId': trip.id }) }}">Deze reis boeken</a>
        </div>
    </div>
        </div>
{% endblock %}
