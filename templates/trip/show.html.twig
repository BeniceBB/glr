{% extends 'base.html.twig' %}

{% block title %}Trip{% endblock %}

{% block body %}
    <h1>Trip</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ trip.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ trip.title }}</td>
            </tr>
            <tr>
                <th>Location</th>
                <td>{{ trip.location }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ trip.description }}</td>
            </tr>
            <tr>
                <th>Startdate</th>
                <td>{{ trip.startdate ? trip.startdate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Enddate</th>
                <td>{{ trip.enddate ? trip.enddate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>MaxStudents</th>
                <td>{{ trip.maxStudents }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_trip_index') }}">back to list</a>

    <a href="{{ path('app_trip_edit', {'id': trip.id}) }}">edit</a>

    {{ include('trip/_delete_form.html.twig') }}
{% endblock %}
